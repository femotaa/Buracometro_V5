<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageButton

            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="18dip"
            android:id="@+id/btnRegistrados"
            android:background="@drawable/btn_registros_xml"
            android:onClick="mudarTelaRegistrados"
            android:contentDescription="@string/app_name">

        </ImageButton>

        <ImageButton
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:id="@+id/btnAdicionar"
            android:layout_marginRight="18dip"
            android:layout_marginTop="10dip"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_adicionar_xml"
            android:onClick="mudarTelaNotificaBuraco"
            android:contentDescription="@string/app_name">

        </ImageButton>

        <ImageButton
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="18dip"
            android:id="@+id/btnMapa"
            android:layout_below="@id/btnRegistrados"
            android:background="@drawable/btn_mapa_xml"
            android:onClick="mudarTelaMapas"
            android:contentDescription="@string/app_name">

        </ImageButton>

        <ImageButton
            android:layout_width="145dip"
            android:layout_height="145dip"
            android:id="@+id/btnEstatisticas"
            android:layout_marginRight="18dip"
            android:layout_marginTop="10dip"
            android:layout_alignParentRight="true"
            android:layout_below="@id/btnAdicionar"
            android:background="@drawable/btn_estatisticas_xml"
            android:onClick="mudarTelaEstatisticas"
            android:contentDescription="@string/app_name">

        </ImageButton>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:id="@+id/progressLigarBuracometro"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:indeterminate="false"
            android:progress="0"
            android:max="100"
            android:secondaryProgress="100"
            android:progressDrawable="@drawable/barra_progresso_circular"
            android:layout_below="@id/btnMapa"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>


        <Button
            android:layout_width="97dip"
            android:layout_height="97dip"
            android:id="@+id/btnligarBuracometro"
            android:background="@drawable/btn_sincronizar"
            android:layout_below="@id/progressLigarBuracometro"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-124dp"
            android:textAlignment="center">

        </Button>


        <Button
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:id="@+id/btnManual"
            android:textOn="+"
            android:background="@drawable/btn_manual_buraco"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_alignBottom="@id/progressLigarBuracometro"
            android:layout_toRightOf="@id/progressLigarBuracometro"
            android:layout_toEndOf="@id/progressLigarBuracometro"
            android:visibility="invisible">

        </Button>

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:id="@+id/barra_progress_achado"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="invisible"
            android:layout_below="@id/btnMapa"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/texto_ligado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Buracometro ligado"
            android:textSize="18sp"

            android:textColor="#ffffff"
            android:visibility="invisible"
            android:layout_above="@id/barra_progress_achado"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/buracometroLigado"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:background="@drawable/img_buracometro_ligado"
            android:visibility="invisible"
            android:layout_alignBottom="@+id/btnSincronizar"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>



</FrameLayout>