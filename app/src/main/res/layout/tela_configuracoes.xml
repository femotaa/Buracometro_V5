<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:background="@drawable/texto_background_neutro"
        android:text="Botao de input manual:"
        android:typeface="sans"
        android:fontFamily="sans-serif"
        android:textColor="#e9e9e9"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dip"
        android:layout_marginLeft="18dip"
        android:textAlignment="center" />

    <ToggleButton
        android:layout_width="70dip"
        android:layout_height="38dip"
        android:id="@+id/btnPrefManual"
        android:background="@drawable/tooggle_button_config"
        android:textOn=""
        android:textOff=""
        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginLeft="30dip">

    </ToggleButton>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clique no botÃ£o abaixo para sincronizar \n           seus dados com o Servidor."
        android:id="@+id/btnSync"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />


    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/circularProgressbar1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:indeterminate="false"
        android:progress="75"
        android:max="100"
        android:secondaryProgress="100"
        android:progressDrawable="@drawable/barra_progresso_circular"
        android:layout_below="@+id/btnSync"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"/>


    <Button
        android:layout_width="127dip"
        android:layout_height="127dip"
        android:id="@+id/btnSincronizar"
        android:background="@drawable/btn_sincronizar"
        android:layout_below="@+id/btnSync"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:textAlignment="center">

    </Button>


    <Button
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="Deletar registros locais"
        android:id="@+id/btnDeletaLocal"
        android:background="@drawable/btn_deleta_todos"
        android:layout_below="@+id/circularProgressbar1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp">

    </Button>


    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/progressBarDeleta"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnDeletaLocal"
        android:layout_marginTop="30dp"/>


</RelativeLayout>